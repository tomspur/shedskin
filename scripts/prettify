#!/usr/bin/env bash
# Prettify C/C++ code according to defaults with astyle

CPPFILES=$(find shedskin/ -name "*.cpp")
HPPFILES=$(find shedskin/ -name "*.hpp")

echo Running astyle
astyle \
    --style=google \
    --indent-switches \
    --keep-one-line-blocks \
    --pad-oper --pad-paren-in \
    $CPPFILES $HPPFILES

echo Running autopep8
autopep8 --in-place --recursive shedskin/
